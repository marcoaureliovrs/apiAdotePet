{
  "name": "apiadotepet",
  "version": "1.0.0",
  "description": "API nodejs para a plataforma de doação e adoção de animais adotepet",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run test-unit & npm run test-integration",
    "test-integration": "NODE_ENV=test mocha --opts test/integration/mocha.opts test/integration/**/*.js",
    "test-unit": "NODE_ENV=test mocha --opts test/unit/mocha.opts test/unit/**/*.js",
    "test-contract": "NODE_ENV=test mocha --opts test/contracts/mocha.opts test/contracts/contracts/**/*.js",
    "start": "babel-node cluster.js"
  },
  "keywords": [
    "adotepet",
    "node",
    "restapi"
  ],
  "author": "Marco Aurélio Vinicius Rodrigues Santiago",
  "license": "ISC",
  "dependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "consign": "^0.1.6",
    "express": "^4.16.2",
    "http-status": "^1.0.1",
    "joi": "^13.0.2",
    "joi-assert": "0.0.3",
    "jwt-simple": "^0.5.1",
    "mysql2": "^1.5.1",
    "passport": "^0.4.0",
    "passport-jwt": "^2.1.0",
    "sequelize": "^4.27.0",
    "sqlite3": "^3.1.13"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "supertest": "^3.0.0",
    "testdouble": "^3.2.6"
  }
}
